@model RestauranteMVC.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro que deseas eliminar esta categoría?</h4>
<p><strong>Nombre:</strong> @Model.Nombre</p>
<p><strong>Descripción:</strong> @Model.Descripcion</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CategoriaID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
