@model IEnumerable<RestauranteMVC.Models.Categoria>

@{
    ViewData["Title"] = "Categorías de Platos";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">Agregar Categoría</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoriaID" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
