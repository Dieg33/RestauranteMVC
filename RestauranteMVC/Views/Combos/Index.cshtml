@model IEnumerable<RestauranteMVC.Models.Combo>

@{
    ViewData["Title"] = "Lista de Combos";
}
<h1>Lista de Combos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo Combo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var combo in Model)
        {
            <tr>
                <td>@combo.Nombre</td>
                <td>@combo.Descripcion</td>
                <td>@combo.Precio</td>
                <td>@combo.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@combo.ComboID" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@combo.ComboID" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@combo.ComboID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
