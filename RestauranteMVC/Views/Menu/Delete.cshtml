@model RestauranteMVC.Models.Menu
@{
    ViewData["Title"] = "Eliminar Menú";
}
<h2>Eliminar Menú</h2>
<hr />
<p>¿Estás seguro de que deseas eliminar el siguiente menú?</p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Nombre</h4>
        <p class="card-text">@Model.Descripcion</p>
        <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MenuID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
