@model RestauranteMVC.Models.Menu
@{
    ViewData["Title"] = "Detalles del Menú";
}
<h2>Detalles del Menú</h2>

<table class="table">
    <tr>
        <th>ID:</th>
        <td>@Model.MenuID</td>
    </tr>
    <tr>
        <th>Nombre:</th>
        <td>@Model.Nombre</td>
    </tr>
</table>

<h3>Promociones</h3>
<ul>
    @foreach (var item in Model.Menu_Items.Where(mi => mi.PromocionID != null))
    {
        <li>@item.Promociones.Descripcion</li>
    }
</ul>

<h3>Platos</h3>
<ul>
    @foreach (var item in Model.Menu_Items.Where(mi => mi.PlatoID != null))
    {
        <li>@item.Platos.Nombre</li>
    }
</ul>

<h3>Combos</h3>
<ul>
    @foreach (var item in Model.Menu_Items.Where(mi => mi.ComboID != null))
    {
        <li>@item.Combos.Nombre</li>
    }
</ul>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
