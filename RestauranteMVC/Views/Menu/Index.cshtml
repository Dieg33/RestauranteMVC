@model IEnumerable<RestauranteMVC.Models.Menu>
@{
    ViewData["Title"] = "Lista de Menús";
}
<h2 class="text-center mt-4">Menús Disponibles</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Agregar Nuevo Menú</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Fecha Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuID" class="btn btn-warning btn-sm">✏ Editar</a>
                    <a asp-action="Details" asp-route-id="@item.MenuID" class="btn btn-info btn-sm">📄 Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuID" class="btn btn-danger btn-sm">🗑 Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
