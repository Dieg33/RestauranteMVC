@{
    ViewData["Title"] = "Mesas";
}

<h2 class="text-center mt-4">Mesas</h2>

<form>
    <div class="form-group">
        <label>Número de mesa</label>
        @Html.TextBox("NumeroMesa", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Capacidad</label>
        @Html.TextBox("Capacidad", "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Estado</label><br />
        <button type="button" class="btn btn-success me-2">Vacío</button>
        <button type="button" class="btn btn-danger">Ocupado</button>
    </div>

    <div class="mt-4 text-center">
        <button type="button" class="btn btn-primary">Crear</button>
        <button type="button" class="btn btn-secondary">Buscar</button>
    </div>
</form>
