@model RestauranteMVC.Models.Mesa

@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "Editar Mesa" : "Agregar Mesa";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]">
    <div class="form-group">
        <label asp-for="NumeroMesa"></label>
        <input asp-for="NumeroMesa" class="form-control" />
        <span asp-validation-for="NumeroMesa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacidad"></label>
        <input asp-for="Capacidad" class="form-control" />
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>
    <div class="form-check mt-2">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
