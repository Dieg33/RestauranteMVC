@model RestauranteMVC.Models.PlatosCombos

@{
    ViewData["Title"] = "Eliminar Relación Combo-Platillo";
}

<h2>@ViewData["Title"]</h2>

<p>¿Estás seguro que deseas quitar el platillo <strong>@Model.Plato?.Nombre</strong> del combo <strong>@Model.Combo?.Nombre</strong>?</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ComboID" />
    <input type="hidden" asp-for="PlatoID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
