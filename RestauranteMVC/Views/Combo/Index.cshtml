@model IEnumerable<RestauranteMVC.Models.Combo>

@{
    ViewData["Title"] = "Combos";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">Agregar Combo</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var combo in Model)
        {
            <tr>
                <td>@combo.Nombre</td>
                <td>@combo.Descripcion</td>
                <td>$@combo.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@combo.ComboID" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@combo.ComboID" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
