@model RestauranteMVC.Models.Promociones
@{
    ViewData["Title"] = "Detalles de la Promoción";
}
<h2 class="text-primary">Detalles de la Promoción</h2>

<div class="card p-4 mt-3 shadow">
    <dl class="row">
        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Descuento</dt>
        <dd class="col-sm-9">@Model.Descuento %</dd>

        <dt class="col-sm-3">Fecha de Inicio</dt>
        <dd class="col-sm-9">@Model.FechaInicio.ToShortDateString()</dd>

        <dt class="col-sm-3">Fecha de Fin</dt>
        <dd class="col-sm-9">@Model.FechaFin.ToShortDateString()</dd>
    </dl>

    <h4 class="mt-4 text-success">Platos en la Promoción</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-success">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Promociones_Items.Where(i => i.PlatoID != null))
            {
                <tr>
                    <td>@item.Plato.Nombre</td>
                    <td>$@item.Plato.Precio</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-4 text-info">Combos en la Promoción</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-info">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Promociones_Items.Where(i => i.ComboID != null))
            {
                <tr>
                    <td>@item.Combo.Nombre</td>
                    <td>$@item.Combo.Precio</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.PromocionID" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
