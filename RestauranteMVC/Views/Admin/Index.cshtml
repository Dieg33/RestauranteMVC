@{
    ViewData["Title"] = "Vista Administrativa";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <h3 class="text-primary">Vista Administrativa</h3>
    <div class="row">
        <div class="col-md-2 bg-dark text-white p-3">
            <h4>Admin</h4>
            <ul class="nav flex-column mt-4">
                <li class="nav-item"><a class="nav-link text-white" href="#">Empleados</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#">Promociones</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#">Salir</a></li>
            </ul>
        </div>

        <div class="col-md-10">
            <div class="row">
                @{
                    var items = new[] {
                new { Titulo = "Creación de Nuevo Platillo", Descripcion = "Nuevo plato a incorporar en el menú", Boton = "Agregar Platillo", Link = "/Platillos/Crear" },
                new { Titulo = "Empleados", Descripcion = "Información de los empleados", Boton = "Seguir", Link = "/Empleados" },
                new { Titulo = "Mesa", Descripcion = "Creación de mesas", Boton = "Seguir", Link = "/Mesas/Crear" },
                new { Titulo = "Combo", Descripcion = "Creación de combos", Boton = "Seguir", Link = "/Combos/Crear" },
                new { Titulo = "Promociones", Descripcion = "Promos en platillos o combos", Boton = "Seguir", Link = "/Promociones/Index" },
                new { Titulo = "Menú", Descripcion = "Categorías de tipo de comida", Boton = "Seguir", Link = "/Menu/Index" },
                new { Titulo = "PlatosCombo", Descripcion = "Crear platos en combo", Boton = "Seguir", Link = "#" },
                new { Titulo = "Categoría", Descripcion = "Categorías para platos", Boton = "Seguir", Link = "#" }
                };
                }

                @foreach (var item in items)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@item.Titulo</h5>
                                <p class="card-text">@item.Descripcion</p>
                                <a href="@item.Link" class="btn btn-outline-success">@item.Boton</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
